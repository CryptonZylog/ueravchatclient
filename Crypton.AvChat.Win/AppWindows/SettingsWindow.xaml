<Window x:Class="Crypton.AvChat.Win.AppWindows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Chat Settings" Closed="Window_Closed" Loaded="Window_Loaded" ResizeMode="CanResizeWithGrip" TextOptions.TextFormattingMode="Display" Width="430" Height="500" Icon="/Crypton.AvChat.Win;component/ChatIcon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TabControl Name="SettingsTabs" Margin="8">
        </TabControl>
        <StackPanel Margin="0,0,8,8" Grid.Row="1" FlowDirection="LeftToRight" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button IsDefault="True" Name="btnSave" Content="Save" Padding="16,4,16,4" Margin="4" Click="SaveAllSettings" />
            <Button IsCancel="True" Name="btnCancel" Content="Cancel"  Padding="16,4,16,4" Margin="4" Click="CancelWindow" />
        </StackPanel>
    </Grid>
</Window>
